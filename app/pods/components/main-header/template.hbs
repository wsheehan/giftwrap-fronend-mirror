<header id="main-header" class="mat-box-soft-shadow">
	<div>
		<img {{action "goToRoot"}} src="https://storage.googleapis.com/giftwrap-media/banner_logo.png" id="banner-logo">
	</div>

  {{#if user}}
    <div id="main-header-links">
      <h4>
        {{#link-to "users.show" user.id}}<img src="{{user.avatarUrl}}"> {{user.firstName}} {{user.lastName}}{{/link-to}}
        {{!-- <a href="#" {{action "logout"}}>Logout</a> --}}
      </h4>
    </div>
  {{else}}
  	<div id="main-header-links">
  		<h4>
  			<a href="#">Solutions</a>
  			<a href="#">Pricing</a>
        {{#link-to "login"}}Sign in{{/link-to}}
  		</h4>
  	</div>
  {{/if}}
</header>

<div id="main-header-offset"></div>
