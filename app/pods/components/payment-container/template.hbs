{{yield}}

<div id="payment-container">
	{{input type="hidden" id="paymentMethodNonce"}}
	<h3>Payment Options</h3>
	<div id="payment-error">Please Enter a Payment Method</div>
	<div id="paypal-wrapper">
		<img src="https://s3.amazonaws.com/giving-gael/public/paypal_button_small.png" id="paypal-button">
	</div>
	<div id="card-payment">
		<div>
			<label>Card Number</label>
			<div id="card-number" class="mat-input"></div>
		</div><div>
			<label>Exp. Date</label>
			<div id="exp-date" class="mat-input"></div>
		</div><div>
			<label>CVV</label>
			<div id="cvv" class="mat-input"></div>
		</div>
	</div>
	<div id="braintree-secured">
		<a href="https://www.braintreegateway.com/merchants/YOUR_MERCHANT_ID/verified" target="_blank">
			<img src="https://s3.amazonaws.com/braintree-badges/braintree-badge-wide-dark.png" width="200px" height ="30px" border="0"/>
		</a>
	</div>
</div>

<div id="payment-details">

	<div id="paypal-info">
		<div id="paypal-email"></div>
		<div id="paypal-cancel">cancel</div>
	</div>

	<div id="payment-errors"></div>

</div>
